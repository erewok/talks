name:                servant-sample
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/pellagic-puffbomb/talks/servant_talk_2017/tak.md
license:             BSD3
license-file:        LICENSE
author:              Erik Aker
maintainer:          eraker@gmail.com
copyright:           2017 Erik Aker
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Lib
  build-depends:       base >= 4.7 && < 5
                     , aeson
                     , blaze-html
                     , bytestring
                     , servant
                     , servant-blaze
                     , servant-server
                     , text
  default-language:    Haskell2010
  default-extensions:  OverloadedStrings
  ghc-options:         -Wall

executable servant-sample-client
  hs-source-dirs:      examples
  main-is:             Clientexample.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , servant-sample
                     , bytestring
                     , aeson
                     , http-client
                     , http-client-tls
                     , servant
                     , servant-client
                     , servant-foreign
                     , servant-py
                     , servant-server
                     , text
                     , filepath
  default-language:    Haskell2010

executable servant-sample-server
  hs-source-dirs:      examples
  main-is:             Serverexample.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , servant-sample
                     , bytestring
                     , blaze-html
                     , stm
                     , aeson
                     , wai
                     , servant
                     , servant-server
                     , servant-blaze
                     , text
                     , filepath
                     , warp
  default-language:    Haskell2010

executable servant-sample-docs
  hs-source-dirs:      examples
  main-is:             Swaggerexample.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , servant-sample
                     , bytestring
                     , aeson
                     , http-types
                     , servant
                     , servant-server
                     , servant-docs
                     , text
                     , filepath
                     , warp
                     , wai
  default-language:    Haskell2010


executable servant-sample-quickcheck
  hs-source-dirs:      examples
  main-is:             Quickcheckexample.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , servant-sample
                     , bytestring
                    --  , hspec==2.3.2
                     , servant
                    --  , servant-quickcheck
                     , text
                     , filepath
                     , warp
  default-language:    Haskell2010

test-suite servant-sample-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , servant-sample
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/servant-sample
